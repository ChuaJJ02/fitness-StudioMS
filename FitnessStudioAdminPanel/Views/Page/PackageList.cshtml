@{
    ViewData["Title"] = "PackageList";
}

<html>
<head>
    <title>Package List</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<style>
    table{
        width: 100%;
        border: 1px solid black;
    }

    .package-btn{
        align-content: end;
    }




</style>

<body>
    <h1>Edit, Delete, and Create the Package List here</h1>


    <div class="package-btn">
        <button>Add Package</button>
    </div>

    <div class="package-btn">
        <button>Delete Package</button>
    </div>

    <table id="Packageslist">
        <thead>
            <tr>
                <th>Package Name</th>
                <th>Details</th>
                <th>Pricing</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
        <tfoot>
            <tr>
                <th>Weekly Package</th>
                <th>For members only</th>
                <th>RM  20</th>
                <th>
                    <i class="fa-solid fa-pen-to-square"></i>
                </th>
            </tr>
            <tr>
                <th>Montly Package</th>
                <th>For members only</th>
                <th>RM  50</th>
                <th>
                    <i class="fa-solid fa-pen-to-square"></i>
                </th>
            </tr>
            <tr>
                <th>Yearly Package</th>
                <th>For members only</th>
                <th>RM  200</th>
                <th>
                    <i class="fa-solid fa-pen-to-square"></i>
                </th>
            </tr>

        </tfoot>
    </table>
</body>
</html>
