                    <Button Text="04:00 PM" Clicked="SlotBooking_Changed"/>
                </FlexLayout>
            </Grid>
            <Grid Grid.Row="4">
                <Button  Text="Book Appointment" BackgroundColor="#6200EE" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="150"/>
                Clicked="AppointmentanBooking"
            </Grid>
        </Grid>
    </Frame>

